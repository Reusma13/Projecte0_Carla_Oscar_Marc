        <Label Content="Preferències:" HorizontalAlignment="Left" Margin="286,258,0,0" VerticalAlignment="Top" Width="142" Foreground="DarkRed"/>
        <TextBox x:Name="tbPreferencies" HorizontalAlignment="Left" Margin="376,262,0,0" VerticalAlignment="Top" Width="100"/>

