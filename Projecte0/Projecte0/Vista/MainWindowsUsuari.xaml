        <Image Margin="353,297,353,44" Source="/Vista/Imagenes/GironaBrasa.PNG" Stretch="Fill"/>
        <Button x:Name="btnEliminarReserva" Content="Eliminar Reserva" HorizontalAlignment="Center" Margin="0,234,0,0" VerticalAlignment="Top" Width="166" Height="35" Background="DarkRed" Foreground="White" Click="btnEliminarReserva_Click"  />
    </Grid>
</Window>
